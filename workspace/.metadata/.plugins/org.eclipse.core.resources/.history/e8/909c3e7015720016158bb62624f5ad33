	"*16 bit - shortOne = "+shortOne+"\t*\n"+
	"*32 bit - intOne = "+intOne+"\t*\n"+
	"*64 bit - longOne = "+longOne+"\t*\n"+
	"*                               *\n"+
	"*         real types            *\n"+
	"*                               *\n"+
	"*32 bit - floatOne = "+floatOne+"\t*\n"+
	"*64 bit - doubleOne = "+doubleOne+"\t*\n"+
	"*                               *\n"+
	"*      other integer types      *\n"+
	"*                               *\n"+
	"*16 bit - charOne = "+charOne+"\t\t*\n"+
	"*                               *\n"+
	"*         other types           *\n"+
	"*                               *\n"+
	"*booleanOne = "+booleanOne+"\t\t*\n"+
	"*stringOne = "+stringOne+"\t*\n"+
	"\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\"
	;
	
	JOptionPane.showMessageDialog(null, new JTextArea(variablesList));
	
	
} 
	
