
public class RecursionTest {

	public static void main(String[] args)
	{
		test(3);
		test2(3);
	}
	
	public static void test( int n )
	{
		if(n > 0)
		{
			System.out.println(n);
			test(n - 1);
		}
	}
	
	public static void test2( int n )
	{
		if(n > 0)
		{
			for(int i = 0; i < n; i++)
			{
				System.out.print("*");
			}
			System.out.println();
			test2(n - 1);
		}
	}
}
